
import random
def dice():
	dice_1 = random.randint(1,6)
	dice_2 = random.randint(1,6)
	return dice_1 , dice_2
def play_dice():
	print("welcome to crap game ")
	firstroll = sum(dice())
	if firstroll in [7,11]:
		print("you win")
		return
	if firstroll in [2,3,12]:
		print("you lose ")
		return
	print(f"the goal number is {firstroll} , keep rolling",)
	while True :
		roll = sum(dice())
		if roll == firstroll:
			print("you win")
			return
		elif roll == 7 :
			print("you lose")
			return


play_dice()
